// Console module for Soul - provides console output functionality
// Similar to JavaScript's console object

// Basic logging functions
soul log(...args) {
    output = ""
    for (i = 0; i < len(args); i = i + 1) {
        if (i > 0) {
            output = output + " "
        }
        output = output + args[i]
    }
    println(output)
}

soul info(...args) {
    print("â„¹ï¸  ")
    log(...args)
}

soul warn(...args) {
    print("âš ï¸  ")
    log(...args)
}

soul error(...args) {
    print("âŒ ")
